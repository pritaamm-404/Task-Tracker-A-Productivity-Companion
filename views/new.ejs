<% layout("/layouts/boilerplate") %>

  <body>
    <div class="container mt-4">
      <form action="/tasks" method="post" novalidate class="needs-validation">
        <h2 class="text-dark mb-3 offset-2">Add Task</h2>
        <div class="mb-3 col-8 offset-2">
          <label for="title" class="form-label">Title:</label>
          <input type="text" name="title" id="title" class="form-control" placeholder="e.g. Have Medicine" required />
        </div>
        <div class="mb-3 col-8 offset-2">
          <label for="description" class="form-label">Description:</label>
          <textarea name="description" id="description" class="form-control"
            placeholder="e.g. I have to take medicine of headache." required></textarea>
        </div>
        <div class="mb-3 col-8 offset-2">
          <label for="priority" class="form-label">Priority:</label>
          <select name="priority" id="priority" class="form-select">
            <option value="Low">Low</option>
            <option value="Medium">Medium</option>
            <option value="High">High</option>
          </select>
        </div>
        <div class="mb-3 col-8 offset-2">
          <label for="status">Status:</label>
          <select name="status" id="status" class="form-select">
            <option value="Pending">Pending</option>
            <option value="Completed">Completed</option>
          </select>
        </div>
        <div class="mb-3 col-8 offset-2">
          <label for="category" class="form-label">Category:</label>
          <input type="text" name="category" id="category" placeholder="e.g. Health" class="form-control" />
        </div>
        <div class="mb-3 col-8 offset-2">
          <label for="dueDate" class="form-label">Due Date:</label>
          <input type="date" id="dueDate" name="dueDate" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-outline-warning offset-2 addTask">Add</button>
        <br><br>
      </form>
    </div>
  </body>